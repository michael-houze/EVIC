@model MVC_DATABASE.Models.ViewModels.RFIEmployeeIndex

@{
    ViewBag.Title = "RFI";
}

<br />

<table id="expired-tabs">
    <tr>
        <td>
            @Html.ActionLink("Create New RFI", "Create", null, new { @class = "btn btn-primary btn-sm btn-rfi" })
        </td>
        <td>
            <h2>Current/Open Requests for Informations</h2>
        </td>
        <td>
            @Html.ActionLink("Expired RFIs", "ExpiredIndex", null, new { @class = "btn btn-primary btn-sm btn-rfi" })
        </td>
    </tr>
</table>

<br />

<table id="rfiindextable" class="table tablesorter">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RFI.RFIID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RFI.CATEGORY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RFI.EXPIRES)
            </th>
            <th class="text-center">RFI Actions</th>
        </tr>
    </thead>
    @if (Model.OpenRFIList != null)
    {
        <tbody>
            @foreach (var item in Model.OpenRFIList)
            {

                <tr>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.RFIID)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.CATEGORY)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.EXPIRES)
                    </td>
                    <td class="text-center">
                        @Html.ActionLink("Edit", "Edit", new { id = item.RFIID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.RFIID }) |
                        @Html.ActionLink("Vendor Responses", "VendorResponse", new { id = item.RFIID })
                    </td>
                </tr>
            }
        </tbody>
    }

</table>

<br />

<table id="expired-tabs">
    <tr>
        <td>
            @Html.ActionLink("Create New RFI", "Create", null, new { @class = "btn btn-primary btn-sm btn-rfi" })
        </td>
        <td></td>
        <td>
            @Html.ActionLink("Expired RFIs", "ExpiredIndex", null, new { @class = "btn btn-primary btn-sm btn-rfi" })
        </td>
    </tr>
</table>

<script>
    $(document).ready(function () {
        $("#rfiindextable").tablesorter();
    });
</script>